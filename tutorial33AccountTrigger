Trigger simpleTrigger on Account (after insert) {
List<Contact> contactList=new List<Contact>();
    for (Account a : Trigger.new) {
    Contact c=new Contact();
    c.firstName=a.Name;
    c.lastName=a.Name;
   
    contactList.add(c);
        // Iterate over each sObject
    }

  insert contactList;
    
}
